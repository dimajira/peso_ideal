<h1>Lista de datos ingresados</h1>

<table>
  <tr>
    <th>Genero</th>
    <th>Estatura</th>
    <th>Unidades</th>
    <th>Peso Ideal (lb)</th>
    <th>Peso Ideal (kg)</th>
    <th>BMI</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @datos.each do |dato| %>
  <tr>
    <td><%= dato.genero %></td>
    <td><%= dato.estatura %></td>
    <td><%= dato.unidades %></td>
    <% base = dato.genero == "F" ? 101 : 110 %>
    <% estaturaTemp = dato.unidades == "Pulgadas" ? dato.estatura : (dato.estatura*0.3937007) %>
    <% pesoBase = base + 5.06*(estaturaTemp-60) %>
    <% pesoKilogramos = pesoBase*0.453592 %>
    <% bmiTemp = (703*pesoBase)/(estaturaTemp**2) %>
    <td><%= pesoBase  %></td>
    <td><%= pesoKilogramos  %></td>
    <td><%= bmiTemp %></td>
    <td><%= link_to 'Show', dato %></td>
    <td><%= link_to 'Edit', edit_dato_path(dato) %></td>
    <td><%= link_to 'Destroy', dato, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

